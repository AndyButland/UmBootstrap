@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>

@{
    Layout = "_Layout_Features.cshtml";
}

<div class="grid">
    @foreach (IPublishedContent varWebpage in UmbracoContext!.PublishedRequest!.PublishedContent!.Children<IPublishedContent>()!) //LOOP THROUGH LINKS
    {
        <div class="g-col-12 g-col-md-6 g-col-lg-4">
            <div class="card h-100 shadow">
                <img src="@(varWebpage.Value<IPublishedContent>("pageThumbnail").GetCropUrl(width:480))" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><a class="nav-link stretched-link" href="@varWebpage.Url()">@varWebpage.Value("pageTitle")</a></h5>
                    <p class="card-text">
                        @varWebpage.Value("pageDescription")
                    </p>
                </div>
            </div>
        </div>
    }
</div>



